{
  "name": "wbs2tb-electron",
  "version": "1.0.0",
  "description": "Excel WBS to Teambition sync tool with TypeScript and Electron",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "set NODE_ENV=development && tsc -p src/main/tsconfig.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win --x64 --arm64",
    "package:mac": "npm run build && electron-builder --mac --x64 --arm64",
    "package:linux": "npm run build && electron-builder --linux --x64 --arm64",
    "clean": "rimraf dist dist-electron",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "teambition",
    "excel",
    "wbs",
    "sync",
    "typescript",
    "electron",
    "desktop",
    "productivity",
    "project-management"
  ],
  "author": "WBS2TB Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dennischancs/wbs2tb-ts.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.0",
    "electron": "^30.0.0"
  }
}
